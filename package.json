{
  "name": "ai-toolkit-tooling",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Infrastructure and quality tooling for the Gemini Toolkit",
  "bin": {
    "gdev": "./scripts/manage-test.sh"
  },
  "scripts": {
    "check:spell": "cspell '**' --no-progress --color --show-context",
    "format": "prettier --write --ignore-path .gitignore . && shfmt --write -indent 2 **/*.sh",
    "check:format": "prettier --check --ignore-path .gitignore . && shfmt --diff --indent 2 **/*.sh",
    "check:shell": "shellcheck --severity=warning **/*.sh",
    "prepare": "husky",
    "check": "./scripts/core/verify.sh",
    "update": "./scripts/core/update.sh",
    "clean": "./scripts/core/clean.sh"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "cspell": "^8.17.1",
    "husky": "^9.1.7",
    "prettier": "^3.8.1"
  }
}
